{
    "name": "example/crm-example",
    "description": "A Laravel CRM package with multi-tenant support",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "laravel/framework": "^10.0",
        "doctrine/dbal": "^3.6",
        "doctrine/orm": "^2.14",
        "stancl/tenancy": "^3.7",
        "darkaonline/l5-swagger": "^8.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "mockery/mockery": "^1.5",
        "orchestra/testbench": "^8.0",
        "nunomaduro/collision": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "Example\\CrmExample\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Example\\CrmExample\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Example\\CrmExample\\CrmServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test:coverage": "vendor/bin/phpunit --coverage-html coverage",
        "test:pgsql": [
            "TEST_DB_CONNECTION=pgsql vendor/bin/phpunit"
        ],
        "test:all": [
            "@test",
            "@test:pgsql"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true
} 